<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ascent.pojo.Expert" table="expert" catalog="kjsb">
        <id name="expertid" type="java.lang.Integer">
            <column name="expertid" />
            <generator class="increment" />
        </id>
        <many-to-one name="user" class="com.ascent.pojo.User" fetch="select" unique="true">
            <column name="uid">
                <comment>登录用户ID自增</comment>
            </column>
        </many-to-one>
        <property name="name" type="java.lang.String">
            <column name="name" length="20">
                <comment>专家名称</comment>
            </column>
        </property>
        <property name="nation" type="java.lang.String">
            <column name="nation" length="20">
                <comment>名称</comment>
            </column>
        </property>
        <property name="sex" type="java.lang.String">
            <column name="sex" length="2">
                <comment>性别</comment>
            </column>
        </property>
        <property name="unitname" type="java.lang.String">
            <column name="unitname" length="50">
                <comment>所在单位名称</comment>
            </column>
        </property>
        <property name="title" type="java.lang.String">
            <column name="title" length="50">
                <comment>职称</comment>
            </column>
        </property>
        <property name="tel" type="java.lang.String">
            <column name="tel" length="15">
                <comment>电话</comment>
            </column>
        </property>
        <property name="introduction" type="java.lang.String">
            <column name="introduction" length="65535">
                <comment>研究介绍</comment>
            </column>
        </property>
        <property name="temp1" type="java.lang.String">
            <column name="temp1" length="100">
                <comment>预留字段1</comment>
            </column>
        </property>
        <property name="temp2" type="java.lang.String">
            <column name="temp2" length="100">
                <comment>预留字段2</comment>
            </column>
        </property>
        <property name="temp3" type="java.lang.String">
            <column name="temp3" length="100">
                <comment>预留字段3</comment>
            </column>
        </property>
        <property name="temp4" type="java.lang.String">
            <column name="temp4" length="100">
                <comment>预留字段4</comment>
            </column>
        </property>
        <set name="projectCategories" inverse="true">
            <key>
                <column name="expertid">
                    <comment>专家信息表ID</comment>
                </column>
            </key>
            <one-to-many class="com.ascent.pojo.ProjectCategory" />
        </set>
    </class>
</hibernate-mapping>
