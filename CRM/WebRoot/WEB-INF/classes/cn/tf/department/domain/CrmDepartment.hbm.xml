<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.tf.department.domain.CrmDepartment" table="crm_department" catalog="ssh_crm">
        <id name="depId" type="java.lang.String">
            <column name="depID" length="50" />
            <generator class="uuid" />
        </id>
        <property name="depName" type="java.lang.String">
            <column name="depName" length="50" />
        </property>
        <set name="crmPosts" inverse="true">
            <key>
                <column name="depID" length="50" />
            </key>
            <one-to-many class="cn.tf.post.domain.CrmPost" />
        </set>
    </class>
</hibernate-mapping>
