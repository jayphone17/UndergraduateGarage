<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.tf.classes.domain.CrmClass" table="crm_class" >
        <id name="classId" type="java.lang.String">
            <column name="classID" length="50" />
            <generator class="uuid" />
        </id>
        <many-to-one name="crmLessontype" class="cn.tf.lessontype.domain.CrmLessontype" fetch="select">
            <column name="lessonTypeID" length="50" />
        </many-to-one>
        <property name="name" type="java.lang.String">
            <column name="name" length="50" />
        </property>
        <property name="beginTime" type="date">
            <column name="beginTime" length="19" />
        </property>
        <property name="endTime" type="date">
            <column name="endTime" length="19" />
        </property>
        <property name="state" type="java.lang.String">
            <column name="state" length="20" />
        </property>
        <property name="totalCount" type="java.lang.Integer">
            <column name="totalCount" />
        </property>
        <property name="goCount" type="java.lang.Integer">
            <column name="goCount" />
        </property>
        <property name="leaveCount" type="java.lang.Integer">
            <column name="leaveCount" />
        </property>
        <property name="remark" type="java.lang.String">
            <column name="remark" length="500" />
        </property>
        <property name="uploadFileName" type="java.lang.String">
            <column name="uploadFileName" length="100" />
        </property>
        <property name="uploadPath" type="java.lang.String">
            <column name="uploadPath" length="200" />
        </property>
    </class>
</hibernate-mapping>
